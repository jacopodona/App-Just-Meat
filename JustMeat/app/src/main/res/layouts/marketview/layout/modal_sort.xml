<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-15dp"
            app:cardBackgroundColor="@color/peach"
            app:cardCornerRadius="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingHorizontal="16dp">

                <TextView
                    android:id="@+id/marketview_txt_title_modalsort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/title_modal_sort"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/marketview_img_divide_modalsort"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/marketview_txt_title_modalsort"
                    app:srcCompat="@drawable/base_rectangle" />

                <ImageView
                    android:id="@+id/marketview_btn_sel1_modalsort"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:adjustViewBounds="true"
                    app:layout_constraintBottom_toBottomOf="@+id/marketview_txt_sel1_modalsort"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/marketview_txt_sel1_modalsort"
                    app:srcCompat="@drawable/base_rectangle" />

                <ImageView
                    android:id="@+id/marketview_btn_sel2_modalsort"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:adjustViewBounds="true"
                    app:layout_constraintBottom_toBottomOf="@id/marketview_txt_sel2_modalsort"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/marketview_txt_sel2_modalsort"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/base_rectangle" />

                <ImageView
                    android:id="@+id/marketview_btn_sel3_modalsort"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:adjustViewBounds="true"
                    app:layout_constraintBottom_toBottomOf="@+id/marketview_txt_sel3_modalsort"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/marketview_txt_sel3_modalsort"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/base_rectangle" />

                <ImageView
                    android:id="@+id/marketview_btn_sel4_modalsort"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:adjustViewBounds="true"
                    app:layout_constraintBottom_toBottomOf="@+id/marketview_txt_sel4_modalsort"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/marketview_txt_sel4_modalsort"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/base_rectangle" />

                <ImageView
                    android:id="@+id/marketview_btn_sel5_modalsort"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:adjustViewBounds="true"
                    app:layout_constraintBottom_toBottomOf="@+id/marketview_txt_sel5_modalsort"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/marketview_txt_sel5_modalsort"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/base_rectangle" />

                <TextView
                    android:id="@+id/marketview_txt_sel1_modalsort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintStart_toEndOf="@+id/marketview_btn_sel1_modalsort"
                    app:layout_constraintTop_toBottomOf="@+id/marketview_img_divide_modalsort" />

                <TextView
                    android:id="@+id/marketview_txt_sel2_modalsort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintStart_toStartOf="@+id/marketview_txt_sel1_modalsort"
                    app:layout_constraintTop_toBottomOf="@+id/marketview_txt_sel1_modalsort" />

                <TextView
                    android:id="@+id/marketview_txt_sel3_modalsort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintStart_toStartOf="@+id/marketview_txt_sel2_modalsort"
                    app:layout_constraintTop_toBottomOf="@+id/marketview_txt_sel2_modalsort" />

                <TextView
                    android:id="@+id/marketview_txt_sel4_modalsort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintStart_toStartOf="@+id/marketview_txt_sel3_modalsort"
                    app:layout_constraintTop_toBottomOf="@+id/marketview_txt_sel3_modalsort" />

                <TextView
                    android:id="@+id/marketview_txt_sel5_modalsort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:text="TextView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/marketview_txt_sel4_modalsort"
                    app:layout_constraintTop_toBottomOf="@+id/marketview_txt_sel4_modalsort" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>