<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_info_mappe"
    android:layout_width="180dp"
    android:layout_height="130dp"
    app:cardCornerRadius="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_info_mappe"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            ></androidx.appcompat.widget.AppCompatImageView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titolo_info_mappe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome Supermercato"
            ></androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/indirizzo_info_mappe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Indirizzo Supermercato"
            ></androidx.appcompat.widget.AppCompatTextView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/apri_info_mappe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primaryColor"
            android:text="Apri"
            android:textSize="10dp"
            ></com.google.android.material.button.MaterialButton>

    </LinearLayout>

</androidx.cardview.widget.CardView>