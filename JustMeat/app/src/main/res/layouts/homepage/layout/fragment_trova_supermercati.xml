<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:translationZ="90dp">

    <TextView
        android:id="@+id/trovasupermercati_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="Trova Supermercati vicino a te"/>

        <LinearLayout
            android:id="@+id/trovasupermercati_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:layout_below="@id/trovasupermercati_message"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/homepage_cercasupermercati_posizione_button"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usa Posizione Gps"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:text="Oppure usa un indirizzo salvato"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp">

                <Spinner
                    android:id="@+id/homepage_spinner_indirizzi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignRight="@id/homepage_cercasupermercati_indirizzi_button"
                    android:layout_centerInParent="true"
                    />

                <ImageButton
                    android:id="@+id/homepage_cercasupermercati_indirizzi_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:background="@color/primaryColor"
                    android:src="@drawable/ic_lente_bianca" />
            </RelativeLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/trovasupermercati_layout"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Distanza: " />

        <TextView
            android:id="@+id/homepage_textview_distanza"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="1 km" />

            <SeekBar
                android:id="@+id/homepage_seekbar_distanza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:min="1"
                android:progress="25" />


    </LinearLayout>

</RelativeLayout>


















