<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:id="@+id/homepage_statoordine_textview_stato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="Pronto per il ritiro"
            android:textSize="20dp"
            android:textColor="@color/primaryTextColor"
        ></TextView>

        <TextView
            android:id="@+id/homepage_statoordine_textview_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Mercoledì 08/04/2020 h19:00"
            android:textSize="15dp"
            android:textColor="@color/primaryTextColor"
            ></TextView>

        <ImageView
                android:id="@+id/homepage_statoordine_textview_imgview"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/aldi"
            ></ImageView>

        <TextView
            android:id="@+id/homepage_statoordine_textview_indirizzo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:text="Via Roma, 14, Trento"
            android:textSize="15dp"
            android:textColor="@color/primaryTextColor">

        </TextView>

        <com.example.justmeat.homepage.CustomProgressBar
            android:id="@+id/homepage_customProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp">

        </com.example.justmeat.homepage.CustomProgressBar>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/homepage_stato_ordine_rec_view"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

               </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>



        </androidx.core.widget.NestedScrollView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryColor"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="Subtotale"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        ></TextView>

                    <TextView
                        android:id="@+id/stato_ordine_subtotale_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:gravity="center"
                        android:text="0.0 €"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        ></TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="30dp"
                        android:gravity="center"
                        android:text="Buono -0%"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        ></TextView>

                    <TextView
                        android:id="@+id/stato_ordine_buono_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:gravity="center"
                        android:text="0.0 €"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        ></TextView>
                </RelativeLayout>

            </LinearLayout>







        </Toolbar>

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/primaryColor"


            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="Importo"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    ></TextView>

                <TextView
                    android:id="@+id/stato_ordine_totale_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:text="0.0 €"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    ></TextView>
            </RelativeLayout>


        </Toolbar>
    </LinearLayout>

</RelativeLayout>