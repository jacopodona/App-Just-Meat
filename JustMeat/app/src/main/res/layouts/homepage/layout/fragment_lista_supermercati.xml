<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:translationZ="90dp">

    <TextView
        android:id="@+id/listasupermercati_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Supermercati nelle Vicinanze"
        android:gravity="center"
        android:textSize="28sp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/listasupermercati_mostramappa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_below="@id/listasupermercati_title"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:id="@+id/listasupermercati_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="Mostra sulla Mappa"/>

        <ImageButton
            android:id="@+id/homepage_imagebutton_search_on_maps"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/listasupermercati_textview"
            android:background="@color/primaryColor"
            android:backgroundTint="@color/primaryColor"
            android:src="@drawable/ic_mappa" />

    </RelativeLayout>




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/homepage_recyclerview_listasupermercati"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listasupermercati_mostramappa"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:overScrollMode="never"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/listasupermercati_loading"
        android:layout_width="177dp"
        android:layout_height="201dp"
        android:layout_centerInParent="true"
        android:indeterminate="true" />

</RelativeLayout>


















