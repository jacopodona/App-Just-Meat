<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:id="@+id/ordine_preferito_nome_ordine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="Pranzo"
            android:textSize="20dp"
            android:textColor="@color/primaryTextColor"
            >

        </TextView>

        <ImageView
            android:id="@+id/ordine_preferito_img"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/aldi"
            ></ImageView>

        <TextView
            android:id="@+id/ordine_preferito_nome_supermercato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:text="Aldi"
            android:textSize="20dp"
            android:textColor="@color/primaryTextColor">

        </TextView>



        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ordine_preferito_rec_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </androidx.recyclerview.widget.RecyclerView>



        </androidx.core.widget.NestedScrollView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="Importo"
                    android:textStyle="bold"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="20dp"
                    ></TextView>

                <TextView
                    android:id="@+id/ordine_preferito_importo_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:text="00.00â‚¬"
                    android:textStyle="bold"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="20dp"
                    ></TextView>
            </RelativeLayout>


        </Toolbar>




           <com.google.android.material.button.MaterialButton
               android:layout_width="match_parent"
               android:layout_height="50dp"
               app:cornerRadius="16dp"
               android:layout_marginHorizontal="20dp"
               android:text="Ordina"
               ></com.google.android.material.button.MaterialButton>


    </LinearLayout>

</RelativeLayout>