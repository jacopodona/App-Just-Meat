<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:id="@+id/ordine_preferito_nome_ordine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="Pranzo"
            android:textSize="20dp"
            android:textColor="@color/primaryTextColor"
            >

        </TextView>

        <ImageView
            android:id="@+id/ordine_preferito_img"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/aldi"
            ></ImageView>

        <TextView
            android:id="@+id/ordine_preferito_nome_supermercato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:text="Aldi"
            android:textSize="20dp"
            android:textColor="@color/primaryTextColor">

        </TextView>



        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ordine_preferito_rec_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </androidx.recyclerview.widget.RecyclerView>


    <TextView
        android:id="@+id/homepage_txt_nomepreford_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/homepage_img_logosupermercato_fragmentpreferiti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:maxHeight="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homepage_txt_nomepreford_fragment"
        app:srcCompat="@drawable/aldi" />

    <TextView
        android:id="@+id/homepage_txt_indirizzo_framentpreferiti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/homepage_img_logosupermercato_fragmentpreferiti"
        app:layout_constraintStart_toStartOf="@+id/homepage_img_logosupermercato_fragmentpreferiti"
        app:layout_constraintTop_toBottomOf="@+id/homepage_img_logosupermercato_fragmentpreferiti" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/homepage_rv_prodotti_fragmentpreferiti"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="@+id/homepage_btn_neworder_fragmentpreferiti"
        app:layout_constraintStart_toStartOf="@+id/homepage_btn_neworder_fragmentpreferiti"
        app:layout_constraintTop_toBottomOf="@+id/homepage_txt_indirizzo_framentpreferiti" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/homepage_btn_neworder_fragmentpreferiti"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="8dp"
        android:text="Ordina"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/homepage_txt_tottilo_fragmentpreferiti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="Importo"
                    android:textStyle="bold"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="20dp"
                    ></TextView>

                <TextView
                    android:id="@+id/ordine_preferito_importo_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:text="00.00â‚¬"
                    android:textStyle="bold"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="20dp"
                    ></TextView>
            </RelativeLayout>


        </Toolbar>




           <com.google.android.material.button.MaterialButton
               android:layout_width="match_parent"
               android:layout_height="50dp"
               app:cornerRadius="16dp"
               android:layout_marginHorizontal="20dp"
               android:text="Ordina"
               ></com.google.android.material.button.MaterialButton>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>