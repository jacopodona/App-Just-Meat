<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/homepage_txt_nomepreford_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/homepage_img_logosupermercato_fragmentpreferiti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:maxHeight="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homepage_txt_nomepreford_fragment"
        app:srcCompat="@drawable/aldi" />

    <TextView
        android:id="@+id/homepage_txt_indirizzo_framentpreferiti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/homepage_img_logosupermercato_fragmentpreferiti"
        app:layout_constraintStart_toStartOf="@+id/homepage_img_logosupermercato_fragmentpreferiti"
        app:layout_constraintTop_toBottomOf="@+id/homepage_img_logosupermercato_fragmentpreferiti" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/homepage_rv_prodotti_fragmentpreferiti"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="@+id/homepage_btn_neworder_fragmentpreferiti"
        app:layout_constraintStart_toStartOf="@+id/homepage_btn_neworder_fragmentpreferiti"
        app:layout_constraintTop_toBottomOf="@+id/homepage_txt_indirizzo_framentpreferiti" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/homepage_btn_neworder_fragmentpreferiti"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="8dp"
        android:text="Ordina"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/homepage_txt_tottilo_fragmentpreferiti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/homepage_btn_neworder_fragmentpreferiti"
        app:layout_constraintStart_toStartOf="@+id/homepage_btn_neworder_fragmentpreferiti" />

    <TextView
        android:id="@+id/homepage_txt_tottilo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/homepage_txt_tottilo_fragmentpreferiti"
        app:layout_constraintEnd_toEndOf="@+id/homepage_btn_neworder_fragmentpreferiti"
        app:layout_constraintTop_toTopOf="@+id/homepage_txt_tottilo_fragmentpreferiti" />

</androidx.constraintlayout.widget.ConstraintLayout>